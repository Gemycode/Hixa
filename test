<script>
document.getElementById("openBookModal3").onclick = function () {
  document.getElementById("bookModal3").style.display = "flex";
};

document.getElementById("closebookModal3").onclick = function () {
  document.getElementById("bookModal3").style.display = "none";
};

document.getElementById("bookModal3").onclick = function (e) {
  if (e.target === this) {
    this.style.display = "none";
  }
};
</script>




